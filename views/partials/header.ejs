<!-- Barre de navigation -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
    <!-- Nom du site -->
    <a class="navbar-brand" href="/"><%=lang.global.name[navLang]%></a>

    <!-- Mobile active navbar button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Menu -->
    <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav ml-auto">
            <!-- Page d'accueil -->
            <li class="nav-item <%if (title === "accueil") { %>active<% } %>">
                <a class="nav-link" href="/"><%=lang.accueil.name[navLang]%></a>
            </li>

            <!-- Page de documentation -->
            <li class="nav-item <%if (title === "documentation") { %>active<% } %>">
                <a class="nav-link" href="#"><%=lang.documentation.name[navLang]%></a>
            </li>

            <!-- Page de contribution -->
            <%if(user && user.contributor) {%>
                <li class="nav-item <%if (title === "contribution") { %>active<% } %>">
                    <a class="nav-link" href="/contribution"><%=lang.contribution.name[navLang]%></a>
                </li>
            <%}%>

            <!-- Compte -->
            <li class="nav-item dropdown avatar">
                <a class="nav-link dropdown-toggle p-0" href="#" id="account_dropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="/image/icon/account_circle-white.svg" class="rounded-circle z-depth-0" alt="avatar image" height="40">
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="account_dropdown">

                    <%if (user) { %>
                        <!-- Pour les utilisateur connecté -->
                        <span class="dropdown-item-text font-weight-bold"><%=lang.global.navbarHello[navLang]%> <%=user.pseudo%></span>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><%=lang.profil.name[navLang]%></a>
                        <a class="dropdown-item" href="#"><%=lang.settings.name[navLang]%></a>
                        <a class="dropdown-item" href="/getPrivilege"><%=lang.getPrivilege.shortName[navLang]%></a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-danger" href="/logout"><%=lang.logout.name[navLang]%></a>
                    <% } else {%>
                        <!-- Pour les utilisateur non connecté -->
                        <a class="dropdown-item" href="/login"><%=lang.login.name[navLang]%></a>
                        <a class="dropdown-item" href="/register"><%=lang.register.name[navLang]%></a>
                    <%}%>
                </div>
            </li>
        </ul>
    </div>
</nav>